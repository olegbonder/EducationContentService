{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/frontend"
    },
    {
      "name": "Launch Yandex Browser against localhost",
      "type": "chrome", // Используем chrome тип, так как отладчик один для Chromium-базированных браузеров
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend",
      "sourceMaps": true,
      "runtimeExecutable": "C:/Users/u21806410/AppData/Local/Yandex/YandexBrowser/Application/browser.exe", // Путь к Yandex Browser
      "runtimeArgs": [
        "--remote-debugging-port=9222" // Порт для отладки
      ]
    }
  ]
}
